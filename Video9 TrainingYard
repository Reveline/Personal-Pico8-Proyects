cls()

x = 30
y = 50

w = 60
h = 10

--layer one
rectfill( x, y ,x+w ,y+h+4 ,13)

-- background

rectfill( x, y ,x+w ,y+h,1)

--outline
rect( x, y ,x +w,y+h,6 )

--bar
rectfill(x+1, y+1 ,x+w-15 ,y+h-1,8)

print("health" ,x+3,y+3 ,2)

pset(x,y,15)

--linea limite

line( x+w-15,y+h-1,x+w-15,y+h-9, 7)
